<div class="portlet light bordered listaArticulos">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-md-6">
                    <img ng-src="{{imagenArticulo(@dt.articulo.IdArticulo)}}" onerror="this.src='../../img/nodisponible.png'" class="img-responsive center-block" />
                    
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-12">
                            <p>
                                @dt.articulo.DescripcionCorta
                            </p>
                            <small>@dt.articulo.Codigo</small>
                            <p>
                                @dt.articulo.DescripcionDetallada
                            </p>
                        </div>
                        <div class="col-12">
                            <ul class="list-unstyled">
                                @foreach (UnidadManipulacion ud in dt.articulo.UnidadesManipulacion)
        {
                        <li style="padding-bottom: 5px;">
                            @ud.NombreAlmacen

                            @if (ud.StockFinalUV >= 1)
    {
                        <span class="label label-sm label-success">
                            Disponible
                        </span>
}
else
{
                        <span class="label label-sm label-default">
                            Agotado
                        </span>

}

                        </li>

}
                            </ul>
                        </div>
                        <div>
                            <a href="javascript:;" ng-click="anadirCarrito(@dt.articulo.IdArticulo)" class="btn btn-icon-only default">
                                <i class="fa fa-cart-plus"></i>
                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="dataTables_wrapper">
        <div class="row">

        </div>
        <div class="row">
            @if (dt.articulo.Carrocerias.Count > 0)
    {
        <h3>Válido para:</h3>
        <table class="table table-striped table-bordered table-hover table-checkable order-column tabla-listado-prod">
            <thead>
                <tr>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Carrocería</th>
                    <th>Descripción</th>
                    <th>Años</th>

                </tr>
            </thead>
            <tbody>
                @foreach (ArticuloCarroceria car in dt.articulo.Carrocerias)
        {
            <tr class="odd gradeX">


                <td>@car.DescripcionSeccion</td>

                <td>@car.DescripcionFamilia</td>
                <td>@car.DescripcionCarroceria</td>
                <td>@car.DescripcionArticuloModelo</td>
                <td>
                    @if (car.Anos == "")
            {
                <span>Todos los Años</span>

    }
                    @car.Anos

                </td>
            </tr>




}
            </tbody>

        </table>

}


        </div>
    </div>



</div>
<!-- FIN TABLA  parabrisas-->
<!-- TABLA  Gomas-->
@if (dt.articulo.Accesorios.Count > 0)
{
    <h4>Complementos:</h4>
    @foreach (Categoria ct in dt.articulo.Accesorios)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light bordered">
                    <h1>@ct.Descripcion</h1>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column tabla-listado-prod" id="sample_2">
                        <thead>
                            <tr>
                                <th class="">

                                </th>
                                <th> Código </th>
                                <th> Características </th>
                                <th> Almacenes </th>
                                <th class="text-center">PVP</th>
                                <th class="text-center">%</th>
                                <th class="text-center">Neto</th>
                                <th class="text-center">Incl. pedido</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BuscaArticulo ar in ct.Articulos)
                            {
                                <tr class="odd gradeX">
                                    <td class="text-center">
                                        <img ng-src="{{imagenArticulo(@ar.IdArticulo)}}" onerror="this.src='../../img/nodisponible.png'" class="img-responsive center-block" style="width:80%;" />
                                    </td>
                                    <td>@ar.Codigo</td>
                                    <td>
                                        <a class="font-dark" asp-controller="Home" asp-action="Articulo" asp-route-id="@ar.IdArticulo"> @ar.Descripcion </a>
                                    </td>
                                    <td>
                                        <ul class="list-unstyled">
                                            @foreach (UnidadManipulacion ud in ar.UnidadesManipulacion)
                                            {
                                                <li style="padding-bottom: 5px;">
                                                    @ud.NombreAlmacen

                                                    @if (ud.StockFinalUV >= 1)
                                                    {
                                                        <span class="label label-sm label-success">
                                                            Disponible
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-sm label-default">
                                                            Agotado
                                                        </span>

                                                    }

                                                </li>

                                            }
                                        </ul>

                                    </td>
                                    <td class="text-right">0.00€</td>
                                    <td class="text-right">0%</td>
                                    <td class="text-right">0.00€</td>
                                    <td class="text-center">
                                        <a href="javascript:;" class="btn btn-icon-only default">
                                            <i class="fa fa-cart-plus"></i>
                                        </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    }

}

