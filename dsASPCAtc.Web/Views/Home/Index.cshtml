    <div class="row">
        <div class="col-md-12" style="background-image: url(assets/layouts/layout/img/luna-rota.jpg) ;background-size: cover; background-position: center;">
            <h3 class="text-center font-white">Busca en Grupo ATC</h3>
            <div class="row">
                <form asp-controller="Home" asp-action="Productos" method="POST">
                    @model CampoBusqueda;
                    
                    <div class="col-md-offset-3 col-md-6 ">
                        <div class="dropdown" id="dropdown_busqueda">
                            <a data-toggle="dropdown" aria-expanded="false">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Buscar producto" value="" id="busqueda_producto" tabindex="1" autocomplete="off" ng-change="cambiobusqueda()" ng-model="cadena" asp-for="cadena" >
                                    <span class="input-group-btn">
                                        <button class="btn btn-default boton-buscar" type="button" onclick="" id="btn_buscar" tabindex="2">
                                            <i class="glyphicon glyphicon-search"></i>
                                        </button>
                                    </span>

                                </div>
                            </a>
                            <div class="dropdown-menu " id="menu-busqueda" ng-if="mostrardesplegable">
                                <table class="">
                                    <tbody>
                                        <tr class="" ng-repeat="resultado in resultadobusqueda | filter:cadena">
                                            <td class="">
                                                <a>
                                                    {{resultado.descripcion}}
                                                </a>
                                            </td>
                                        </tr>
                                        <tr class="" ng-if="loading" >
                                            <td class="">
                                                <a>
                                                    Cargando...
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="" ng-show="(resultadobusqueda | filter:cadena).length<1">
                                                <a>
                                                    No hay resultados que mostrar
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
