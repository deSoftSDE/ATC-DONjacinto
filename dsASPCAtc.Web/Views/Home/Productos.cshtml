<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-action="Home">Inicio</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a asp-action="Home">Busqueda Genérica</a>
