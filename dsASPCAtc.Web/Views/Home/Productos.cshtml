@{
    @using dsASPCAtc.Web.ViewModels;
    @using EntidadesAtc;
    //var vm = (ProductosViewModel)ViewData["Data"];
    var cm = (CampoBusqueda)ViewData["Data"];
}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a asp-action="Home">Inicio</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <a asp-action="Home">Resultados de búsqueda</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>@cm.cadena</span>
        </li>
    </ul>
</div>
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    Resultados de la búsqueda 
    <strong>@cm.cadena</strong>
</h1>
<!-- END PAGE TITLE-->
<!-- INICIO TABLA -->
<div id="loadinglistaArticulos">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 ">
            <img class="img-responsive center-block" src="~/img/spinner.gif" />
        </div>
    </div>
    
</div>
@* @Html.ActionLink("AnadirACarrito", "AnadirACarrito");*@



<div class="portlet light bordered listaArticulos" style="display:none" ng-controller="listaArticulos">
    <input style="display:none" type="text" value="@cm.cadena" id="cadena" />
   
    <h1 ng-if="vm.articulos.length<1"><small>No hay artículos que mostrar para </small>"@cm.cadena"</h1>

    <div class="dataTables_wrapper">
        <table class="table table-striped table-bordered table-hover table-checkable order-column tabla-listado-prod" id="sample_2">
            <thead>
                <tr>
                    <th class="">
                       
                    </th>
                    <th> Código </th>
                    <th> Características </th>
                    <th> Almacenes </th>
                    <th>PVP</th>
                    <th>%</th>
                    <th>Neto</th>
                    <th>Pedir</th>
                </tr>
            </thead>
            <tbody>
                <tr class="odd gradeX" ng-repeat="ar in vm.articulos">
                    <td>
                        <img src="~/img/spinner.gif" class="img-responsive img-circle" />
                    </td>
                    <td>{{ar.codigo}}</td>
                    <td>
                        <a href=""> {{ar.descripcion}} </a>
                    </td>
                    <td>
                        <ul class="list-unstyled">
                            <li style="padding-bottom: 5px;">
                                Madrid  <span class="label label-sm label-success"> Disponible </span>
                            </li>
                            <li>
                                Tomelloso  <span class="label label-sm label-default"> Agotado </span>
                            </li>
                        </ul>

                    </td>
                    <td>0.00€</td>
                    <td>0%</td>
                    <td>0.00€</td>
                    <td>
                        <a href="javascript:;" class="btn btn-icon-only default">
                            <i class="fa fa-cart-plus"></i>
                        </a>
                    </td>
                </tr>

            </tbody>
        </table>
        <div class="row">
            <div class="col-md-6">
                <p ng-if="vm.articulos.length>0">Mostrando <strong> {{vm.articulos.length}}</strong> de <strong> {{vm.numReg}}</strong> artículos.</p>
            </div>
        <div class="col-md-6">
            <div class="dataTables_wrapper">
                <div class="dataTables_paginate" style="float:right">
                    <ul class="pagination">
                        <li id="primera" ng-click="cambiarPagina(this, 'F')">
                            <a><i class="fa fa-step-backward "></i> Primera</a>
                        </li>
                        <li id="anterior" ng-click="cambiarPagina(this, 'P')">
                            <a><i class="fa fa-caret-left "></i> anterior</a>
                        </li>
                        <li id="siguiente" ng-click="cambiarPagina(this, 'N')">
                            <a> siguiente <i class="fa fa-caret-right "></i></a>
                        </li>
                        <li id="ultima" ng-click="cambiarPagina(this, 'L')">
                            <a>Última <i class="fa fa-step-forward "></i> </a>
                        </li>

                    </ul>
                </div>
            </div>

         </div>
       </div>
    </div>
    
    
    
</div>
<!-- FIN TABLA  parabrisas-->
<!-- TABLA  Gomas-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <h1>GRAPAS</h1>
        </div>
    </div>
</div>
