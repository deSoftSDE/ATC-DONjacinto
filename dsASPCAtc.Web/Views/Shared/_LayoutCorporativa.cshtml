    <!-- Modal -->
    <div class="modal fade" id="modalAppointment" tabindex="-1" role="dialog" aria-labelledby="modalAppointmentLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAppointmentLabel">Solicite Registro en nuestra Área de Clientes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-controller="Inicio" asp-action="Index" method="post"  >
                    <div class="modal-body">

                        <div class="form-group row ">
                            <label for="" class="text-black col-md-2 text-right "><small>NIF/CIF</small></label>
                            <input type="text" class="form-control form-control-sm col-md-10" name="cif" required >
                            <div class="invalid-feedback">
                                Debe introducir un Numero de CIF o NIF
                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="" class="text-black col-md-2 text-right"><small>Nombre</small></label>
                            <input type="text" class="form-control form-control-sm col-md-10" name="nombre" id="nombre" required>
                        </div>
                        <div class="form-group row">
                            <label for="" class="text-black col-md-2 text-right "> <small>Empresa</small></label>
                            <input type="text" class="form-control form-control-sm col-md-10" name="empresa" required>
                        </div> 
                        <div class="form-group row">
                            <label for="appointment_message" class="text-black col-md-2 "><small>Email</small></label>
                            <input type="email" name="email" class="form-control form-control-sm col-md-10" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="text-black"><small>Contraseña</small></label>
                                    <input type="password" class="form-control form-control-sm" name="password">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="text-black"> <small>Teléfono</small></label>
                                    <input type="text" class="form-control form-control-sm" name="telefono" required>
                                </div>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label for="appointment_information" class="text-black col-md-12 p-0"> <small>Información Adicional</small></label>
                            <input type="text" name="informacion" class="form-control col-md-12">
                        </div>
                        @*<div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-primary">
        </div>*@

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <input type="submit" value="Enviar" class="btn btn-primary">

                    </div>
                </form>
                
            </div>
        </div>
    </div>
