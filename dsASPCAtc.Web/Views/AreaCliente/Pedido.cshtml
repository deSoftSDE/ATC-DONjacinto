@{
    var d = (UsuarioWeb)ViewData["Usuario"];
}
<div class="row" ng-cloak>
    <div class="col-md-6">
        <table class="table table-striped table-bordered table-hover table-checkable order-column tabla-listado-prod">
        <thead>
            <tr>
                <th>Artículo</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Dto</th>
                <th>Bon</th>
                <th>Importe</th>
                <th>Eliminar</th>

            </tr>
        </thead>
        <tbody>
            
            <tr class="odd gradeX" ng-repeat="articulo in carrito.articulos">

                <td>{{articulo.descripcion}}</td>
                <td>
                    <input type="submit" value="-" ng-click="anadirCarrito(articulo.idArticulo, -1, articulo.idUnidadManipulacion, true)" />
                    {{articulo.cantidad}}
                    @*Cuando la cantidad es mayor que 10 el botón de + se baja a la siguiente linea*@
                    <input type="submit" value="+" ng-click="anadirCarrito(articulo.idArticulo, 1, articulo.idUnidadManipulacion, true)" />
                </td>
                <td>
                    {{articulo.precioUd.toFixed(2)}}€
                </td>
                <td>
                    {{articulo.dto1.toFixed(2)}}%
                </td>
                <td>
                    {{articulo.bon1.toFixed(2)}}%
                </td>
                <td>
                    {{articulo.precio.toFixed(2)}} €
                </td>
                <td>
                    <input type="submit" value="Eliminar" ng-click="eliminarArticulo(articulo.idArticulo, true)" />
                </td>
            </tr>


        </tbody>

        </table>
    </div>
    <div class="col-md-2">

    </div>
    <div class="col-md-4">
        <form method="post" asp-controller="AreaCliente" asp-action="Procesar">
            <label>Dirección de entrega:</label>
            <select name="domicilio">
                @foreach (Domicilio dm in d.Domicilios)
                    {
            <option value="@dm.IDDomicilioCliente">@dm.NombreDomicilio</option>
                    }
            </select>

            <div>Total base Imponible: {{carrito.totalBaseImponible.toFixed(2)}}€</div>
            <div class="row">
                <div class="col-md-4">
                    % IVA
                </div>
                <div class="col-md-4">
                    Base Imponible
                </div>
                <div class="col-md-4">
                    Cuota IVA
                </div>
            </div>
            <div class="row" ng-repeat="tiva in carrito.tipoIva">
                <div class="col-md-4">
                    {{tiva.porcentajeIva.toFixed(2)}} %
                </div>
                <div class="col-md-4">
                    {{tiva.totalArticulos.toFixed(2)}}  €
                </div>
                <div class="col-md-4">
                    {{tiva.totalIva.toFixed(2)}} €
                </div>
            </div>
            <div class="row">
                Total Iva: {{carrito.totalIva.toFixed(2)}} €
            </div>
            <div class="row">
                Total pedido:	{{carrito.totalPedido.toFixed(2)}} €

            </div>
            <div class="row">
                <input type="hidden" name="usuario" value="@d.IdUsuarioWeb"/>
                <button type="button" class="btn btn-danger" ng-click="eliminarCarrito()"><i class="glyphicon glyphicon-remove"></i>Limpiar Carrito</button>
                <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i>Procesar Pedido</button>
            </div>
        </form>
    </div>
</div>

